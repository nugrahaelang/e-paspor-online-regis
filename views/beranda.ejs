        <script>
            // Check if there is an error message from the server
            const urlParams = new URLSearchParams(window.location.search);
            const errorMessage = urlParams.get('error');

            if (errorMessage) {
                Swal.fire({
                    icon: 'error',
                    title: 'Akses Ditolak',
                    text: errorMessage,
                }).then(() => {
                    window.location.href = '/login';
                });
            }
        </script>

        <script>
            const JOTFORM_API_KEY = 'fc56543378a7e3cf6a9d7726a006511f'; // API Key dari authController.js

            document.addEventListener('DOMContentLoaded', async function() {
                try {
                    const response = await fetch('/jotform-data');
                    const result = await response.json();

                    console.log('JotForm Data:', result);

                    if (result.success && result.submissions.length > 0) {
                        const table = document.getElementById('jotformTable');
                        const tbody = table.querySelector('tbody');

                        const today = new Date();
                        today.setHours(0, 0, 0, 0); // Set to start of the day

                        result.submissions.forEach(submission => {
                            const namaLengkap = submission.answers['5']?.prettyFormat || 'N/A';
                            const email = submission.answers['23']?.answer || 'N/A';
                            const informasiJenis = submission.answers['4']?.answer || 'N/A';
                            const pilihKantor = submission.answers['22']?.answer || 'N/A';
                            const pilihTanggal = submission.answers['25']?.prettyFormat || 'N/A';

                            const tanggalKedatangan = new Date(submission.answers['25']?.answer?.date);
                            tanggalKedatangan.setHours(0, 0, 0, 0); // Set to start of the day

                            if (tanggalKedatangan >= today) {
                                const row = document.createElement('tr');
                                row.innerHTML = `
                                    <td>${namaLengkap}</td>
                                    <td>${email}</td>
                                    <td>${informasiJenis}</td>
                                    <td>${pilihKantor}</td>
                                    <td>${pilihTanggal}</td>
                                    <td><button class="btn btn-primary" onclick="showDetails(${JSON.stringify(submission.answers).replace(/"/g, '&quot;')})">DETAIL DATA</button></td>
                                `;
                                tbody.appendChild(row);
                            }
                        });

                        table.style.display = 'table';
                        const centeredContainer = document.querySelector('.centered-container p');
                        if (centeredContainer) {
                            centeredContainer.style.display = 'none';
                        }

                        // Inisialisasi DataTables setelah data dimuat
                        $(document).ready(function() {
                            $('#jotformTable').DataTable();
                        });
                    }
                } catch (error) {
                    console.error('Error fetching JotForm data:', error);
                }
            });

            function showDetails(answers) {
                let detailsHtml = '<table class="table table-bordered table-detail-data"><tbody>';
                for (const key in answers) {
                    if (answers.hasOwnProperty(key) && key !== '1' && key !== '2' && key !== '30') {
                        let answerContent = answers[key].prettyFormat || answers[key].answer;
                        if (answers[key].type === 'control_fileupload') {
                            const fileUrl = answers[key].answer[0];
                            answerContent += ` <a href="${fileUrl}?apiKey=${JOTFORM_API_KEY}" target="_blank" class="btn btn-secondary btn-sm">Download</a>`;
                        }
                        detailsHtml += `
                            <tr>
                                <td><strong>${answers[key].text}:</strong></td>
                                <td class="text-left">${answerContent}</td>
                            </tr>
                        `;
                    }
                }
                detailsHtml += '</tbody></table>';

                Swal.fire({
                    title: 'Detail Data',
                    html: detailsHtml,
                    width: '600px',
                    showCloseButton: true,
                    focusConfirm: false,
                    confirmButtonText: 'Close'
                });
            }
        </script>
