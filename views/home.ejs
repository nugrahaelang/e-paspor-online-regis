                  <hr class="mt-0 mb-4" />
                  <div class="row">
                      <div class="col-xl-4">
                        <!-- Profile picture card-->
                        <div class="card mb-4 mb-xl-0">
                          <div class="card-header">Foto Profil</div>
                          <div class="card-body text-center">
                          <!-- Profile picture image-->
                          <% if (user.foto_profil) { %>
                            <img id="profileImage" class="img-account-profile rounded-circle mb-2" src="/uploads/<%= user.foto_profil %>" alt="Foto Profil" width="300" height="300" />
                          <% } else { %>
                            <img id="profileImage" class="img-account-profile rounded-circle mb-2" src="" alt="Foto Profil" width="300" height="300" style="display: none;" />
                          <% } %>
                            <!-- Profile picture help block-->
                            <div class="small font-italic text-muted mb-4">JPG atau PNG tidak lebih dari 5 MB</div>
                            <!-- Profile picture upload button-->
                            <input type="file" id="uploadProfileImage" class="form-control mb-2" accept="image/*" />
                            <button class="btn btn-primary mt-2" type="button" id="uploadButton">Upload</button>
