  <script>
    // Check if there is an error message from the server
    const urlParams = new URLSearchParams(window.location.search);
    const errorMessage = urlParams.get('error');

    if (errorMessage) {
      Swal.fire({
        icon: 'error',
        title: 'Akses Ditolak',
        text: errorMessage,
      }).then(() => {
        window.location.href = '/login';
      });
    }
  </script>

<!-- sweet alert buat notif simpan data -->
<script>
  document.getElementById('profileForm').addEventListener('submit', async function(event) {
    event.preventDefault();

    const formData = new FormData(this);
    const data = {};
    formData.forEach((value, key) => {
      data[key] = value;
    });

    try {
      const response = await fetch('/update-profile', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      });

      const result = await response.json();

      if (result.success) {
        Swal.fire({
          icon: 'success',
          title: 'Profil berhasil diperbarui',
          text: result.message,
        }).then(() => {
          window.location.reload();
        });
      } else {
        Swal.fire({
          icon: 'error',
          title: 'Gagal memperbarui profil',
          text: result.message,
        }).then(() => {
          window.location.reload();
        });
      }
    } catch (error) {
      Swal.fire({
        icon: 'error',
        title: 'Gagal memperbarui profil',
        text: 'Terjadi kesalahan saat memperbarui profil. Silakan coba lagi.',
      }).then(() => {
        window.location.reload();
      });
    }
  });
</script>

<script>
  document.getElementById('uploadButton').addEventListener('click', async function() {
    const fileInput = document.getElementById('uploadProfileImage');
    const file = fileInput.files[0];

    if (!file) {
      Swal.fire({
        icon: 'warning',
        title: 'Anda belum upload file foto',
        text: 'Silakan pilih file foto untuk diupload.',
      });
      return;
    }

    const formData = new FormData();
    formData.append('profileImage', file);

    try {
      const response = await fetch('/upload-profile-image', {
        method: 'POST',
        body: formData
      });

      const result = await response.json();

      if (result.success) {
        Swal.fire({
          icon: 'success',
          title: 'Foto profil berhasil diupload',
          text: result.message,
        }).then(() => {
          const profileImage = document.getElementById('profileImage');
          profileImage.src = result.foto_profil;
          profileImage.style.display = 'block';
          window.location.reload();
        });
      } else {
        Swal.fire({
          icon: 'error',
          title: 'Gagal mengupload foto profil',
          text: result.message,
        });
      }
    } catch (error) {
      Swal.fire({
        icon: 'error',
        title: 'Gagal mengupload foto profil',
        text: 'Terjadi kesalahan saat mengupload foto profil. Silakan coba lagi.',
      });
    }
  });

  // Validasi nomor telepon
  document.getElementById('inputPhone').addEventListener('input', validatePhoneNumber);

  function validatePhoneNumber() {
    var notelp = document.getElementById('inputPhone').value;
    if (!/^\d*$/.test(notelp)) {
      Swal.fire({
        icon: 'error',
        title: 'Invalid Input',
        text: 'No telp hanya boleh angka',
      });
      document.getElementById('inputPhone').value = notelp.replace(/\D/g, '');
    }
  }

  // Validasi nama lengkap
  document.getElementById('inputUsername').addEventListener('input', validateNamaLengkap);

  function validateNamaLengkap() {
    var namaLengkap = document.getElementById('inputUsername').value;
    if (!/^[a-zA-Z\s]*$/.test(namaLengkap)) {
      Swal.fire({
        icon: 'error',
        title: 'Invalid Input',
        text: 'Nama lengkap hanya boleh huruf',
      });
      document.getElementById('inputUsername').value = namaLengkap.replace(/[^a-zA-Z\s]/g, '');
    }
  }

</script>

